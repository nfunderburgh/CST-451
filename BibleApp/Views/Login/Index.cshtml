@model Milestone.Models.UserModel

<style>
    .font {
        font-family: Bungee
    }
</style>

<div class="container" style="margin-top:3em;">
<h4 font-family="var(--bs-body-font-family)">Login</h4>
<hr />
<div class="row font">
    <div class="col-md-4">
        <form asp-action="ProcessLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="font-family: 'Segoe UI', sans-serif;" asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-family: 'Segoe UI', sans-serif;" asp-for="Password" class="control-label" ></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="font-family: 'Segoe UI', sans-serif;" type="submit" value="Login" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
