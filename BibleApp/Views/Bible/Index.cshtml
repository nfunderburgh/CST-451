@using BibleApp.Controllers
@model IEnumerable<BibleApp.Models.BibleModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Verses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                Favorite
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @if (new BibleController().CheckIfVerseIsFavorited(item.VerseId, @ViewBag.CurrentUserId))
                    {
                        @Html.ActionLink("Unfavorite", "UnfavoriteVerse", "Bible", new {  id = item.VerseId  }, null)
                    }
                    else
                    {
                        @Html.ActionLink("Favorite", "FavoriteVerse", "Bible", new {  id = item.VerseId  }, null)
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
