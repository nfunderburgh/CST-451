@{
    ViewData["Title"] = "Explore";
    Layout = "_LoggedInLayout";
}

<div class="explore-container">
    <div class="person-card">
        <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-pic">
        <h3 class="person-name">John Doe</h3>
        <p class="person-bio">This is a short bio about John Doe. He enjoys hiking, reading, and cooking.</p>
        
        <div class="action-buttons">
            <button id="dislike-button" class="btn btn-danger">Dislike</button>
            <button id="like-button" class="btn btn-success">Like</button>
        </div>
    </div>
</div>