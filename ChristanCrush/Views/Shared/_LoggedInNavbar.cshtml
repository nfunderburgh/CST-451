<style>

.text-white {
    color: white;
}

.offcanvas-header {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.offcanvas-title {
    flex-grow: 1;
    text-align: center;
}
</style>


<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <!-- Toggler button for mobile and larger screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Centered navbar brand -->
        <div class="d-flex justify-content-center w-100">
            <a class="navbar-brand" href="#">Christian Crush</a>
        </div>
    </div>
</nav>

<!-- Offcanvas Menu -->
<div class="offcanvas offcanvas-start bg-primary" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
    <div class="offcanvas-header d-flex align-items-center w-100">
        <h5 class="offcanvas-title mx-auto text-white" id="offcanvasMenuLabel">Hi User,</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="d-flex flex-column">
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">View Profile</a>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">Matches</h5>
                    <a class="nav-link" asp-area="" asp-controller="Matches" asp-action="Index">View Matches</a>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">Messages</h5>
                    <a class="nav-link" asp-area="" asp-controller="Messages" asp-action="Index">View Messages</a>
                </div>
            </div>
        </div>
    </div>
</div>